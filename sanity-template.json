{
  "updateLockFiles": true,
  "rangeStrategy": "bump",
  "bumpVersion": "patch",
  "packageRules": [
    {
      "packagePatterns": ["*"],
      "enabled": false
    },
    {
      "packagePatterns": ["^@sanity/", "sanity-plugin-*"],
      "groupName": "Sanity packages",
      "enabled": true,
      "automerge": true,
      "rangeStrategy": "update-lockfile",
      "extends": [
        ":automergeMinor"
      ],
      "lockFileMaintenance": { "enabled": true }
    },
    {
      "packageNames": ["react", "react-dom"],
      "groupName": "React",
      "enabled": true,
      "automerge": true,
      "extends": [
        ":automergeMinor"
      ],
      "lockFileMaintenance": { "enabled": true }
    }
  ]
}
