{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "groupName": "sanity-studio-v3",
      "packageNames": ["sanity"],
      "followTag": "dev-preview",
      "schedule": ["every weekday"],
      "rangeStrategy": "pin"
    },
    {
      "groupName": "sanity-studio-v3-plugins",
      "packageNames": ["@sanity/scheduled-publishing"],
      "followTag": "studio-v3",
      "schedule": ["every weekday"],
      "rangeStrategy": "pin"
    },
    {
      "matchPackageNames": ["@types/react"],
      "matchPackagePrefixes": ["react"],
      "matchDepTypes": ["dependencies", "devDependencies"],
      "allowedVersions": "<=17",
      "enabled": true
    }
  ]
}
