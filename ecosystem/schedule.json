{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "depTypeList": ["devDependencies"],
      "schedule": ["before 4am on sunday"]
    },
    {
      "depTypeList": ["dependencies", "peerDependencies", "resolutions"],
      "extends": ["schedule:daily"]
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "extends": [
      "schedule:quarterly"
    ]
  }
}
