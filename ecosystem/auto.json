{
  "description": "Configures Renovate Bot to follow best practices as determined by the Ecosystem team at Sanity",
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>sanity-io/renovate-presets//ecosystem/base",
    "github>sanity-io/renovate-presets//ecosystem/labels",
    "github>sanity-io/renovate-presets//ecosystem/schedule",
    "github>sanity-io/renovate-presets//ecosystem/strategy"
  ],
  "packageRules": [
    {
      "updateTypes": ["major"],
      "extends": ["github>sanity-io/renovate-presets//ecosystem/group"]
    },
    {
      "depTypeList": ["dependencies"],
      "updateTypes": ["patch", "minor"],
      "groupName": "dependencies (non-major)"
    },
    {
      "depTypeList": ["devDependencies"],
      "updateTypes": ["patch", "minor"],
      "groupName": "devDependencies (non-major)"
    },
    {
      "depTypeList": ["resolutions"],
      "updateTypes": ["patch", "minor"],
      "groupName": "resolutions (non-major)"
    }
  ]
}
